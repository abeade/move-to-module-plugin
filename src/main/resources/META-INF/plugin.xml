<idea-plugin>
    <id>com.abeade.plugin.move.resources</id>
    <name>Move resources</name>
    <vendor email="albert.beade@letgo.com" url="https://github.com/abeade">Albert Beade</vendor>

    <description><![CDATA[
        <h1>Move resources</h1>
        <p><a href="https://github.com/mthli/Nongfu">GitHub</a> | <a href="https://github.com/mthli/Nongfu/issues">Issues</a></p>
        <br />
        <p>A IntelliJ IDEA plugin that allows to move files or directories between modules.</p>
        <br />
        <p><b>Usage:</b> Refactor â†’ Move to Module...</p>
        <p><b>Keymap:</b> Control(Command) + Shift + X</p>
        <br />
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="com.abeade.plugin.move.MoveToModule"
                class="com.abeade.plugin.move.MoveToModule"
                text="Move to Module..."
                description="Move file to selected module">
            <add-to-group group-id="RefactoringMenu" anchor="after" relative-to-action="Move" />
            <keyboard-shortcut first-keystroke="control shift X" keymap="$default" />
        </action>
    </actions>
</idea-plugin>